// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource postgresDb {
  provider = "postgresql"
  url      = env("DATABASE_URL_PRISMA")
}

model Trait {
  id        Int     @id @default(autoincrement())
  type      String?
  chemistry String?
}

model Team {
  id        Int     @id @default(autoincrement())
  name      String?
}

model League {
  id        Int     @id @default(autoincrement())
  name      String?
}

model Player {
  id               Int     @id @default(autoincrement())
  localID          String?
  teamId           String?
  leagueId         String?
  firstName        String?
  lastName         String?
  primaryPosition  String?
  pitcherRole      String?
  power            String?
  contact          String?
  speed            String?
  fielding         String?
  arm              String?
  velocity         String?
  junk             String?
  accuracy         String?
  age              String?
  gender           String?
  throws           String?
  bats             String?
  secondaryPosition String?
  jerseyNumber     String?
  rating           String?
  traitId1         String?
  traitId2         String?
  careerStart      String?
  careerEnd        String?
  fourSeamFastball String?
  twoSeamFastball  String?
  screwball        String?
  changeup         String?
  forkball         String?
  curveball        String?
  slider           String?
  cutFastball      String?
  windup           String?
  pitchAngle       String?
  playerChemistry  String?
  salary           String?
}