// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource postgresDb {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id               Int     @id @default(autoincrement())
  localID          Int?
  team             String?
  league           String?
  firstName        String?
  lastName         String?
  primaryPosition  Int?
  pitcherRole      Int?
  power            Int?
  contact          Int?
  speed            Int?
  fielding         Int?
  arm              Int?
  velocity         Int?
  junk             Int?
  accuracy         Int?
  age              Int?
  gender           Int?
  throws           Int?
  bats             Int?
  secondaryPosition Int?
  jerseyNumber     Int?
  trait1           String?
  traitChemistry1  String?
  trait2           String?
  traitChemistry2  String?
  careerStart      Int?
  careerEnd        Int?
  fourSeamFastball Int?
  twoSeamFastball  Int?
  screwball        Int?
  changeup         Int?
  forkball         Int?
  curveball        Int?
  slider           Int?
  cutFastball      Int?
  windup           Int?
  pitchAngle       Int?
  playerChemistry  String?
  salary           Int?
}