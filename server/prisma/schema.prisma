// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource postgresDb {
  provider = "postgresql"
  url      = env("DATABASE_URL_PRISMA")
}

// model League {}
